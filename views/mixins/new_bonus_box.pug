mixin new_bonus_box(i, bonusAmount, movies)
  div.bonus(style={height:'200px', border:'solid 1px #000', margin:'6px'})
    div(style={float:'left', 'min-width':'105px', height:'200px', 'border-right':'solid 1px #000'})
    div(style={float:'left', height:'200px'})
      p: strong= `Bonus ${i}: +${bonusAmount}` 
      p What will be the 
        strong= `${i == 1 ? 'highest' : 'lowest'} ` 
        | rated movie on 
        a(href="https://www.rottentomatoes.com" target="_blank") Rotten Tomatoes
        | ?
      select(name=`bonus${i}`)
        each movie in movies
          option(value=movie.id)= movie.name
    div(style={float:'right', width:'105px', height:'200px', 'border-left':'solid 1px #000'})